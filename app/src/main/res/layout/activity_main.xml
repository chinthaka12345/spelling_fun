<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.rudroid.spellingfun.MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        >



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayoutSpell">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Spelling hint"
            android:layout_weight="4"
            android:id="@+id/spellHint"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/spellSpeakBtn"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            />



    </LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spelling"
            android:inputType="textNoSuggestions"
            android:textSize="40sp"
            android:textStyle="bold"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dip"
        android:layout_below="@+id/linearLayoutSpell"
        android:id="@+id/linearLayoutDescrip">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Description hint"
            android:layout_weight="4"
            android:id="@+id/descHint"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/descSpeakBtn"
            android:layout_weight="2"
            android:src="@drawable/ic_play_circle_outline_black_24dp"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/description"
        android:textSize="30sp"
        android:layout_alignParentStart="true"/>

    </LinearLayout>
</RelativeLayout>
